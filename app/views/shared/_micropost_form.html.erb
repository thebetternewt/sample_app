<%= form_for @micropost do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
    <%= f.text_area :content, class: 'form-control',
                              placeholder: 'Compose new micropost...' %>
    <%= f.submit 'Post', class: 'btn btn-primary' %>
    <span class="picture">
      <%= f.file_field :picture %>
    </span>
  </div>
<% end %>
